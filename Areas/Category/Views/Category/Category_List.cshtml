﻿@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@using System.Data
@model DataTable

<h3>Category List Page</h3>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr class="text-center">
                            <th>Category</th>
                            <th>Category Description</th>
                            <th>Creation Date</th>
                            <th>Modification Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Rows.Count > 0)
                            {
                                foreach (DataRow dr in Model.Rows)
                                {

                                    <tr class="text-center">
                                        <td>@dr["CategoryName"]</td>
                                        <td>@dr["CategoryDescription"]</td>
                                        <td>@dr["CreatedAt"]</td>
                                        <td>@dr["ModifiedAt"]</td>
                                        <td>
                                            <form method="post" asp-area="Category" asp-controller="Category" asp-action="CategoryDelete">
                                                <input type="hidden" name="CategoryID" value="@dr["CategoryID"]">
                                                <button type="submit" class="btn btn-danger"
                                                        onclick="return fun1()">
                                                    Delete
                                                </button>
                                                <a class="btn btn-warning" asp-area="Category" asp-controller="Category"
                                                   asp-action="CategoryAdd" asp-route-CategoryID="@dr["CategoryID"]">
                                                    Update
                                                </a>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">
                                        <p class="col-form-label">No Record Found </p>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function fun1() {
            if (confirm("Are you sure you want to Delete record?")) {
                return true;
            }
            else {
                return false;
            }
        }
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}