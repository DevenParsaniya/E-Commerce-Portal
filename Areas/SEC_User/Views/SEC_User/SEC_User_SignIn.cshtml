@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_Layout_SignIn.cshtml";
}
@using E_Commerce_Website.Areas.SEC_User.Models
@model SEC_UserModel

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                <h1 class="text-center font-weight-light my-4">
                                    <div class="row justify-content-center">Online Shopping</div>
                                </h1>
                                </div>
                                <div class="card-body">
                                    <h3 class="text-center font-weight-light my-4">Login To Your Account</h3>
                                    <h6 class="text-center font-weight-light my-4">Using Your UserName and Password</h6>
                                    <form asp-area="SEC_User" asp-controller="SEC_User" asp-action="Login">
                                        <label class="required form-label mb-2" for="inputEmail">
                                            User Name
                                        </label>
                                        <div class="form-floating mb-3">
                                            <input class="form-control"  asp-for="UserName" type="text" />
                                        </div>
                                        <div class="text-danger">@Html.Raw(TempData["UserNameError"]) </div>
                                        <label class="required form-label mb-2" for="inputPassword">
                                            Password
                                        </label>
                                        <div class="form-floating mb-3">
                                            <input class="form-control"  asp-for="Password" type="password" />
                                        </div>
                                        <div class="text-danger">@Html.Raw(TempData["PasswordError"]) </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                            <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="password.html">Forgot Password?</a>
                                            <button class="btn btn-primary" type="submit" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Login">Login</button>
                                        </div>
                                        <div class="separator separator-content my-14">
                                            <span class="w-125px text-gray-500 fw-semibold fs-7"></span>
                                        </div>
                                        <lable><div class="text-danger">@Html.Raw(TempData["Error"]) </div></lable>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small">Don't have an account?<a asp-area="SEC_User" asp-controller="SEC_User" asp-action="SEC_User_SignUp">Create Account</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                
            </footer>
        </div>
    </div>
</body>


